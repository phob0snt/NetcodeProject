#TitleLabel {
    margin-top: 3px;
    margin-left: 3px;
}

#DurationContainer {
    display: flex;
    flex-direction: row;
    margin: 3px;
}

#DurationContainer > Button {
    margin-left: 0;
    margin-right: 0;
    flex-grow: 1;
    flex-shrink: 0;
    flex-direction: row;
    flex-basis: 10px;
}

#DurationContainer > IntegerField {
    width: 50px;
    flex-basis: auto;
    flex-direction: row;
    max-width: 50px;
    margin-right: 0;
    margin-left: 2px;
    margin-top: 0;
    margin-bottom: 0;
}

#DurationField {
    width: 100px;
    flex-grow: 1;
}

#TriggerButton {
    margin-bottom: 3px;
}
